<div class="card-container col-6 offset-3">
  <div class="card" style="width: 24rem;">
    <div class="card-body">
      <h3 class="card-title">Name: <%= @restaurant.name %></h3>
      <h4 class="card-subtitle mb-2 text-muted">Category: <%= @restaurant.category %></h4>
      <p class="card-text">Address: <%= @restaurant.address %></p>
      <hr>
      <% @restaurant.reviews.each do |review|%>
      <p class="card-text">Rating: <%= review.rating %></p>
      <p class="card-text">Review: <%= review.content %></p>
    <% end %>
      <%= link_to 'Create new reviews', new_restaurant_review_path(@restaurant), class: "card-link" %>
      <%= link_to "Back to the list", restaurants_path, class: "card-link"%>
    </div>
  </div>
</div>
